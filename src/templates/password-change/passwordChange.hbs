<div class="profile">
  {{{buttonArrow}}}
  <form class="profile__info">
    <div class="profile__avatar-info">
      {{{avatar}}}
      {{{profileTitle}}}
    </div>
    <div class="profile__data">
      <div class="profile__texts">
        {{{profileEmail}}}
        {{{profileLogin}}}
        {{{profileName}}}
      </div>
      <div class="profile__inputs">
        {{{oldPassword}}}
        {{{newPassword}}}
        {{{newPasswordRepeat}}}
      </div>
    </div>
    {{{buttonSave}}}
  </form>
</div>
